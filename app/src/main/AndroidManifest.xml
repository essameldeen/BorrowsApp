<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.raywenderlich.android.borrow">

  <application
      android:name=".presentation.BorrowApp"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity android:name=".presentation.splach.SplashScreenActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".presentation.itemActivity.BorrowedItemActivity"
        android:windowSoftInputMode="adjustResize">
    </activity>
    <activity android:name=".presentation.home.MainActivity">
    </activity>
  </application>

</manifest>